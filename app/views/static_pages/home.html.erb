<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to LifeInvader</h1>

    <h2>
      If you're going to post pictures of your kids, FYI nobody cares about how cute they are!</h2>

    <%= link_to "Sign up and tell us all your problems! (we don't care)", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("cats.jpg", alt: "Rails logo"),
              'http://pornhub.com/' %>
<% end %>